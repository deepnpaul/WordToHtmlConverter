@{
    ViewData["Title"] = "Upload Document";
}

<h1>Upload Document</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-info">
        @TempData["msg"]
    </div>
}

<form asp-action="UploadHtml" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select DOCX File:</label>
        <input type="file" class="form-control-file" id="file" name="file" accept=".docx" required>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<hr>

<a asp-action="Index" class="btn btn-secondary">Back to Documents</a>
